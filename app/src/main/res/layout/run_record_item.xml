<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:padding="5dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_weight="20"
            android:orientation="vertical">

        <TextView
                android:id="@+id/runRecordItem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YYYY-MM-dd HH时"
                android:textColor="?android:attr/textColorPrimary"/>
        <TextView
                android:id="@+id/runRecordItem_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用时 HH:mm:ss"
                android:gravity="right"
                android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_weight="16"
            android:orientation="vertical">

        <TextView
                android:id="@+id/runRecordItem_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="aaaa/bbbb"
                android:textColor="?android:attr/textColorPrimary"/>

        <TextView
                android:id="@+id/runRecordItem_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1024步"
                android:textColor="?android:attr/textColorPrimary"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="vertical">


        <TextView
                android:id="@+id/runRecordItem_valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有效"
                android:visibility="gone"
                android:textColor="#FF00FF00"/>

        <TextView
                android:id="@+id/runRecordItem_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="无效(?)"
                android:visibility="visible"
                android:textColor="#FFFF0000"/>

        <TextView
                android:id="@+id/runRecordItem_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00 m/s"
                android:textColor="?android:attr/textColorPrimary"/>

    </LinearLayout>


</LinearLayout>
